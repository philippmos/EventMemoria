@page "/"
@using EventMemoria.Web.Common.Settings
@using EventMemoria.Web.Models
@using Microsoft.Extensions.Options
@using EventMemoria.Web.Components.NameModal
@using EventMemoria.Web.Components.Photo
@using EventMemoria.Web.Components.Shared

@rendermode InteractiveServer

<PageTitle>@CustomizationOptions.Value.PageTitle</PageTitle>

<NameModal OnNameSaved="@OnNameSaved" />

<div class="birds-container">
    <HeaderComponent />

    <UploadComponent @ref="_uploadComponent" 
                          OnPhotosUploaded="@RefreshVirtualizedGrid" />
    <VirtualizedGrid @ref="_virtualizedGrid"
                          OnPhotosLoaded="@OnPhotosLoaded" />
</div>

@code {
	[Inject] private IOptions<CustomizationOptions> CustomizationOptions { get; set; } = default!;

    private VirtualizedGrid? _virtualizedGrid;
    private UploadComponent? _uploadComponent;
    private int _totalPhotosCount = 0;

    private async Task RefreshPhotos()
    {
        await InvokeAsync(StateHasChanged);
    }

    private async Task RefreshVirtualizedGrid()
    {
        if (_virtualizedGrid != null)
        {
            await _virtualizedGrid.RefreshPhotos();
        }
        await InvokeAsync(StateHasChanged);
    }

    private void OnPhotosLoaded(List<Photo> photos)
    {
        _totalPhotosCount = photos.Count;
        StateHasChanged();
    }

    private async Task OnNameSaved()
    {
        if (_uploadComponent != null)
        {
            await _uploadComponent.RefreshUserName();
        }
    }
}
