@page "/"
@using Microsoft.Extensions.Options
@using Vogelhochzeit.Common.Settings
@using Vogelhochzeit.Components.Shared
@using Vogelhochzeit.Models

@rendermode InteractiveServer

<PageTitle>@CustomizationOptions.Value.PageTitle</PageTitle>

<div class="birds-container">
    <HeaderComponent />

    <PhotoUploadComponent OnPhotosUploaded="@RefreshVirtualizedGrid" />
    <VirtualizedPhotoGrid @ref="virtualizedGrid"
                          OnPhotosLoaded="@OnPhotosLoaded" />
</div>

@code {
	[Inject] private IOptions<CustomizationOptions> CustomizationOptions { get; set; } = default!;

    private VirtualizedPhotoGrid? virtualizedGrid;
    private int totalPhotosCount = 0;

    private async Task RefreshPhotos()
    {
        await InvokeAsync(StateHasChanged);
    }

    private async Task RefreshVirtualizedGrid()
    {
        if (virtualizedGrid != null)
        {
            await virtualizedGrid.RefreshPhotos();
        }
        await InvokeAsync(StateHasChanged);
    }

    private void OnPhotosLoaded(List<Photo> photos)
    {
        totalPhotosCount = photos.Count;
        StateHasChanged();
    }
}
