@page "/"

<PageTitle>Vogelhochzeit - Jasmin & Philipp</PageTitle>

<div class="friday-snap-app">
    <div class="header">
        <h1 class="app-title">Fotogalerie</h1>
    </div>

    <div class="profile-section">
        <div class="profile-image">
            <img src="/title-image.jpg" alt="Jasmin & Philipp" />
        </div>
        <h2 class="profile-name">Jasmin & Philipp</h2>
